<Page
    x:Class="Teretana.AddMemberMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Teretana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{ThemeResource ResourceKey=PageStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Height="70" Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Add member}" FontSize="50px"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3">
            <Button x:ConnectionId='6'  Name="backButton"                          VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30 20 0 0" Width="50" Height="50">
                <SymbolIcon Symbol="Back"></SymbolIcon>
            </Button>
            <TextBlock x:ConnectionId='7' VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Name="nameBlock"  Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Enter name}"></TextBlock>
            <TextBox x:ConnectionId='8' VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Name="nameBox" Margin="0 0 0 10" Style="{ThemeResource ResourceKey=TextBoxStyle}" PlaceholderText="{StaticResource Name placeholder}"                              ></TextBox>
            <TextBlock x:ConnectionId='9' VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Name="lastNameBlock" Margin="0 10 0 0"  Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Enter last name}"></TextBlock>
            <TextBox x:ConnectionId='10' VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Name="lastNameBox" Margin="0 0 0 10" Style="{ThemeResource ResourceKey=TextBoxStyle}" PlaceholderText="{StaticResource Last name placeholder}"                                  ></TextBox>
            <TextBlock x:ConnectionId='11' VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Name="JMBBlock" Margin="0 10 0 0"  Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Enter JMB}"/>
            <TextBox x:ConnectionId='12' VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Name="JMBBox" Margin="0 0 0 10" Style="{ThemeResource ResourceKey=TextBoxStyle}" PlaceholderText="{StaticResource JMB placeholder}"></TextBox>
            <TextBlock x:ConnectionId='13' VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Name="genderBlock" Margin="0 10 0 0"  Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Gender}"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton x:ConnectionId='16' Name="maleButton" Content="{StaticResource Male}" GroupName="Gender" Tag="Male" IsChecked="True"/>
                <RadioButton x:ConnectionId='17' Name="femaleButton" Content="{StaticResource Female}" GroupName="Gender" Tag="Female"/>
            </StackPanel>
            <TextBlock x:ConnectionId='14' VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Name="BirthDateBlock" Margin="0 10 0 10"  Style="{ThemeResource ResourceKey=TextBlockStyle}" Text="{StaticResource Birth date}"></TextBlock>
            <CalendarView x:ConnectionId='15' Margin="0 0 0 10" x:Name="BirthDateCalendar" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionMode="Single"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Image x:ConnectionId='5' Name="memberImage" VerticalAlignment="Center" HorizontalAlignment="Center" Width="512" Height="512" Source="/Assets/bodybuilder_icon.png"></Image>
        </StackPanel>
        <Button x:ConnectionId='2' Grid.Row="3" Grid.Column="0" x:Name="addImageButton" Style="{ThemeResource ResourceKey=ButtonStyle}"  Width="200" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center"                              Content="{StaticResource Add Image}"/>
        <Button x:ConnectionId='3' Grid.Row="3" Grid.Column="2" x:Name="cancelButton" Style="{ThemeResource ResourceKey=ButtonStyle}"  Width="200" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center"                            Content="{StaticResource Cancel}"/>
        <Button x:ConnectionId='4' Grid.Row="3" Grid.Column="1" x:Name="okButton" Style="{ThemeResource ResourceKey=ButtonStyle}"  Width="200" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center"                        Content="{StaticResource OK}"/>
    </Grid>
</Page>

